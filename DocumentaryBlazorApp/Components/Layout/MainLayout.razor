@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <header class="app-header bg-gray-100 shadow-md py-0.5 px-4">
            <h1 class="text-2xl font-bold text-center text-gray-800">Documentary App</h1>
            <p class="text-center font-light">Explore a world of stories</p>
        </header>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
